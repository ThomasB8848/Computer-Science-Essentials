print("Welcome to the calculator app")
print("This calculator adds two numbers that the user enters")
NumberOneInput = input()
NumberTwoInput = input()
solution = int(NumberOneInput) + int(NumberTwoInput)
print(solution)

print("Welcome to the calculator app")
print("This calculator divides two numbers that the user enters")
while True:

    try:
        InputUno = input()
        InputDos = input()
        solution = int(InputUno) / int(InputDos)
        print(solution)
        break
    except:
        print("You did not give any numbers!! Please try again.")

    print("Good bye!")

print("Welcome to the calculator app")
print("This calculator multiplies two numbers that the user enters")
InputOne = input()
InputTwo = input()
solution = int(InputOne) * int(InputTwo)
print(solution)

print("This app is meant to calculate the four main types of math operations by a set number of 10.")
NumberOneInput = input()
Solution = int(NumberOneInput) + 10
Solution = int(NumberOneInput) - 10
Solution = int(NumberOneInput) * 10
Solution = int(NumberOneInput) / 10
if int(NumberOneInput) <= 60:
    print("Your solution is" + str(Solution))
else:
    print("Your solution is more than 60")
